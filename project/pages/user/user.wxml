<!--pages/user/user.wxml-->
<view class="page" data-weui-theme="{{theme}}">
    <view class="top">
        <image src="/static/images/user/camera.png" class="smallIcon" bindtap="openCamera" type="primary"></image>
    </view>

    <view class="userInformation">
        <view>
            <image src="{{userImgPath}}" class="userIcon"></image>
        </view>
        <view class="userInformationRight">
            <view style="display: {{userInformationRight1}}" class="userInformationRightPart">
                <view class="weui-input" class="userName">{{userName}}</view>
                <text class="userWords">{{userWords}}</text>
            </view>
            <view style="display: {{userInformationRight2}}" class="userInformationRightPart">
                <button class="weui-btn weui-btn_mini weui-btn_default" bindtap="getUserInfo" open-type="getUserInfo">{{ userStatus }}</button>
            </view>
        </view>
    </view>

    <!-- <web-view src="http://www.edu2act.cn/">雪梨</web-view> -->
    <view class="mid">
        <view class="weui-cells weui-cells_after-title">
            <navigator url="" class="weui-cell weui-cell_example weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__hd">
                    <image src="{{icon}}" style="margin-right: 16px;vertical-align: middle;width:20px; height: 20px;"></image>
                </view>
                <view class="weui-cell__bd"></view>
                <web-view class="weui-cell__ft weui-cell__ft_in-access">学习</web-view>
            </navigator>
            <navigator url="" class="weui-cell weui-cell_example weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__hd">
                    <image src="{{icon}}" style="margin-right: 16px;vertical-align: middle;width:20px; height: 20px;"></image>
                </view>
                <view class="weui-cell__bd"></view>
                <web-view class="weui-cell__ft weui-cell__ft_in-access">雪梨教育</web-view>
            </navigator>
        </view>
    </view>
</view>